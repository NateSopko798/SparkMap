<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back5"
    tools:context="com.sparkmap.sparkmap.LoginActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="175dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <AutoCompleteTextView
        android:id="@+id/email"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_below="@+id/editText"
        android:layout_marginTop="49dp"
        android:background="#11000000"
        android:fontFamily="monospace"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="#11000000"
        android:fontFamily="monospace"
        android:hint="@string/prompt_password"
        android:imeActionId="@+id/login"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textSize="16dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/email_sign_in_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="@string/action_sign_in"
        android:textStyle="bold"
        app:cardBackgroundColor="#68ffa7"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="monospace"
                android:text="Login"
                android:textColor="#99110000" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <CheckBox
        android:id="@+id/isNewUserCheckBox"
        android:layout_below="@+id/email_sign_in_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:layout_weight="2.19"
        android:fontFamily="monospace"
        android:text="Sign Up"
        android:textColor="#d2d4dc"
        android:textSize="14dp"
        android:layout_height="30dp"
        android:layout_width="100dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167dp"
        android:background="#00000000"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="textPersonName"
        android:text="SparkMap"
        android:textColor="#d2d4dc"
        android:textSize="24sp" />

</RelativeLayout>
